                     android:id="@+id/txtTeamGedo"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Al-Ostoora Gedo"
                     android:textAlignment="center"
                     android:padding="15dp"
                     android:textSize="20sp"
                     android:fontFamily="Roboto"
                     />

             </LinearLayout>
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                 android:padding="10dp"
                 >
                 <ImageView
                     android:layout_width="50dp"
                     android:layout_height="50dp"
                     android:scaleType="centerCrop"
                     android:background="@drawable/boy2"
                     />
                 <TextView
                     android:id="@+id/txtTeamMohamed"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Mohamed Adly"
                     android:textAlignment="center"
                     android:padding="15dp"
                     android:textSize="20sp"
                     android:fontFamily="Roboto"
                     />

             </LinearLayout>
         </LinearLayout>



     </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:background="@drawable/bgfooter"
        >
        <ImageView
            android:id="@+id/icnFaceLogo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:layout_alignParentLeft="true"
            android:background="@drawable/facelogo2"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/icnFaceLogo"
            android:layout_centerVertical="true"
            android:textColor="@android:color/white"
            android:text="|"
            android:id="@+id/txtspl" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/txtspl"
            android:layout_centerVertical="true"
            android:textColor="@android:color/white"
            android:text="https://www.facebook.com/groups/1779258102373549"
            android:id="@+id/textView" />




    </RelativeLayout>


</LinearLayout>
